{% extends '::base.html.twig' %}

{% block body -%}
    <h1>River list</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Length</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ loop.index }}.</td>
                <td><a href="{{ path('river_show', { 'id': entity.id }) }}">{{ entity.name }}</a></td>
                <td>{{ entity.length }}</td>
                <td>
                    <a href="{{ path('river_show', { 'id': entity.id }) }}" class="btn btn-default" role="button">show</a>
                    <a href="{{ path('river_edit', { 'id': entity.id }) }}" class="btn btn-default" role="button">edit</a>
                </td>

            </tr>
        {% endfor %}
        </tbody>
    </table>

    <p>
        <a href="{{ path('river_new') }}" class="btn btn-primary btn-lg btn-success" role="button">Add a new record</a>
    </p>

    {% endblock %}
